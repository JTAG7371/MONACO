#include "ui_mp/common/redux.inc"
#include "ui/menudef.h"

#define MENU_NAME					"changesniper"
#define MENU_TITLE					"CHOOSE SNIPER"

#define SNIPER_BUTTON_WRAPPER( idx, sniper_ref, sniper_name, sniper_desc, sniper_tex, sniper_origin ) \
		REDUX_BUTTON( idx, sniper_name, scriptmenuresponse "select_sniper:"sniper_ref; ) \
		CREATE_TEXT( _CHOICE_RECT( idx ), sniper_origin, 1 1 1 0.25, 1, textfont 0; textalignx 8; textaligny 5; textscale 0.2; textstyle 3; textalign ITEM_ALIGN_TOP_LEFT ) \
		CREATE_SHADER_EX( _CHOICE_ORIGIN( idx ) 64 32 1 1, sniper_tex, 1 1 1 1, 1, origin 186 0 )

menudef
{
	name 							MENU_NAME
	rect 							0 0 640 480 4 4
	forecolor 						1 1 1 1
	REDUX_INGAME_MENU
	onOpen
	{
		open MENU_NAME"_r";
		lerp x "from" -200 "to" 0 "over" 0.1;
		lerp alpha "from" 0 "to" 1 "over" 0.1;
	}
	onRequestClose
	{
		close MENU_NAME"_r";
		lerp alpha "from" 1 "to" 0 "over" 0.1;
		lerp x "from" 0 "to" -200 "over" 0.1;
		open "class";
	}

#undef _CHOICE_Y_TEXTALIGN
